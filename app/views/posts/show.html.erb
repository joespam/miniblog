<h1> <%= "#{@post.title}" %> </h1>

<%= "#{@post.body}" %>
<p>
	<% if current_user %>
	<%= link_to "Got Something to Say?", new_post_comment_path(@post.id) %>
	<% else %>
	<%= "Log in to comment" %>
	<% end %>
</p>
<hr>
<% @comments.each do |comment| %>   
<p>
	<%= "#{comment.body}"%>
</p>
<%= comment_author_fullname_link comment.id %>

	<% if can_comment comment.id %>
<%= link_to "Edit", edit_post_comment_path(@post.id,comment.id) %> 
<%= link_to "Delete", comment_path(comment.id), method: :delete %>
<% end %>
<hr>
<% end %>
