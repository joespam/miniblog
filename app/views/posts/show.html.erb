<h1> <%= "#{@post.title}" %> </h1>

<%= "#{@post.body}" %>
<p>
<% if current_user %>
<%= link_to "Got Something to Say?", new_post_comment_path(@post.id) %>
<% else %>
<%= "Log in to comment" %>
<% end %>
</p>
<hr>
<% @comments.each do |comment| %>   
	<p>
		<%= "#{comment.body}"%>
	</p>
		<%= comment_author_fullname_link comment.id %>
	<hr>
<% end %>
