<h1>Member List</h1>

<% if any_new_members %>
	<h2>New Members</h2>
	<ul>
		<% new_members.each do |user| %>
			<li><%= user_link user %></li>
		<% end %>
	</ul>
<% end %>


<hr>
<p>
<% if !session[:user_id].nil? %>
	<%= link_to "Logout ", logout_path, method: :delete %>| Not A Member?
	<%= link_to " Sign up!", new_user_path %>
<% else %>
	<%= link_to "Login", login_path %> | Not A Member?
	<%= link_to " Sign up!", new_user_path %>
<% end %>
</p>
<hr>
<% @users.each do |user| %>   
	<p>
		<%= link_to "#{user.fname} #{user.lname} #{user.email}", user %>
	</p>
	<!-- <%= link_to("Delete", user_path(user.id), method: :delete) %> -->
	<% if !session[:user_id].nil? %>
		<%= link_to("Delete", user, method: :delete) %>
		<%= link_to "Edit", edit_user_path(user.id) %>
	<% end %>
<% end %>
<hr>
<p>
	
</p>