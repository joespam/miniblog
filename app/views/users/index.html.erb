<h1>User Index</h1>

<h2>New Members</h2>
<ul>
	<% new_members.each do |user| %>
		<li><%= user_link user %></li>
	<% end %>
</ul>


<hr>
<p>
<% if !session[:user_id].nil? %>
	<%= link_to "Logout", logout_path, method: :delete %>
<% else %>
	<%= link_to "Login", login_path %> 
<% end %>
</p>
<hr>
<% @users.each do |user| %>   
	<p>
		<%= link_to "#{user.fname} #{user.lname} #{user.email}", user %>
	</p>
	<!-- <%= link_to("Delete", user_path(user.id), method: :delete) %> -->
	<%= link_to("Delete", user, method: :delete) %>
	<%= link_to "Edit", edit_user_path(user.id) %>
<% end %>
<hr>
<p>
	<%= link_to "Add new user", new_user_path %>
</p>